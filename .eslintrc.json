{
  "env": {
    "jasmine": true
  },
  "extends": ["@ffflorian/eslint-config", "plugin:react/recommended"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "@typescript-eslint/typedef": "off"
      }
    }
  ],
  "rules": {
    "valid-jsdoc": "off",
    "react/jsx-uses-vars": "error",
    "react/prefer-stateless-function": "error",
    "react/prop-types": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
