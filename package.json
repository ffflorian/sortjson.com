{
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@material-ui/core": "3.9.0",
    "@material-ui/icons": "3.0.2",
    "jsonabc": "2.3.1",
    "mdi-material-ui": "5.8.0",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "react-scripts": "2.1.3",
    "typescript": "3.2.4"
  },
  "devDependencies": {
    "@types/jest": "23.3.12",
    "@types/jsonabc": "2.3.0",
    "@types/navigator-permissions": "0.1.0",
    "@types/node": "10.12.18",
    "@types/react": "16.7.20",
    "@types/react-dom": "16.0.11",
    "cross-env": "5.2.0",
    "gh-pages": "2.0.1",
    "husky": "1.3.1",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3",
    "rimraf": "2.6.3",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.17.0",
    "tslint-plugin-prettier": "2.0.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --config tslint.json --project tsconfig.json --fix",
      "git add"
    ],
    "*.{json,md,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "name": "sortjson.com",
  "private": true,
  "scripts": {
    "build:site": "cross-env REACT_APP_VERSION=$npm_package_version react-scripts build",
    "clear": "rimraf build",
    "deploy": "gh-pages -t -d build -m \"Publish\"",
    "dist": "yarn clear && yarn build:site",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix",
    "lint": "yarn lint:ts && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "tslint --config tslint.json --project tsconfig.json \"**/*.{ts,tsx}\"",
    "prettier": "prettier --ignore-path .gitignore --write \"src/*.{ts,tsx}\"",
    "start": "cross-env REACT_APP_VERSION=$npm_package_version react-scripts start",
    "test": "react-scripts test"
  },
  "version": "1.2.1"
}
