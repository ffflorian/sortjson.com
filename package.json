{
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@material-ui/core": "3.8.3",
    "@material-ui/icons": "3.0.2",
    "@types/jest": "23.3.12",
    "@types/node": "10.12.18",
    "@types/react": "16.7.18",
    "@types/react-dom": "16.0.11",
    "jsonabc": "2.3.1",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "react-scripts": "2.1.3",
    "typescript": "3.2.2"
  },
  "devDependencies": {
    "gh-pages": "2.0.1",
    "husky": "1.3.1",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3",
    "rimraf": "2.6.3",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.17.0",
    "tslint-plugin-prettier": "2.0.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --config tslint.json --project tsconfig.json --fix",
      "git add"
    ],
    "*.{json,md,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "name": "sortjson.com",
  "private": true,
  "scripts": {
    "build": "yarn build:site && yarn build:static",
    "build:site": "react-scripts build",
    "build:static": "node bin/static-files.js",
    "clear": "rimraf build",
    "deploy": "gh-pages -t -d build -m \"Publish\"",
    "dist": "yarn clear && yarn build",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix",
    "lint": "yarn lint:ts && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "tslint --config tslint.json --project tsconfig.json \"**/*.{ts,tsx}\"",
    "prettier": "prettier --ignore-path .gitignore --write \"src/*.{ts,tsx}\"",
    "start": "react-scripts start",
    "test": "react-scripts test --watchAll=false"
  },
  "version": "0.1.0"
}
